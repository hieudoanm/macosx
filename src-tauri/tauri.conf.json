{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "macosx",
  "version": "0.0.1",
  "identifier": "io.hieudoanm.macosx",

  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },

  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "macOSX",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["bin/wifi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
